<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/panelbuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@android:color/black"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_sl_menu_clientnotes"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="clientnotes"
            android:textSize="20dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_sl_menu_comments"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="comments"
            android:background="#10ffffff"
            android:scrollbars = "vertical"
            android:maxLines = "3"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/sl_menu_button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_green_button"
                android:text="Button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/sl_menu_button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_blue_button"
                android:text="Button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/sl_menu_button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_green_button"
                android:text="Button"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/sl_menu_button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_red_button"
                android:text="Button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/sl_menu_button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_blue_button"
                android:text="Button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/sl_menu_button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_green_button"
                android:text="Button"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/sl_menu_button7"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_green_button"
                android:text="Button 7"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/sl_menu_button8"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_green_button"
                android:text="Button 8"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/sl_menu_button9"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_green_button"
                android:text="Button 9"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_contract_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="#30ffffff"
        android:orientation="vertical"
        android:padding="4dp"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:padding="6dp"
            android:text="Select contract"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listcontracts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttitle"
            android:layout_margin="4dp"
            android:background="#ffffff"
            android:cacheColorHint="#00000000"
            android:prompt="@string/select_contract" />
    </RelativeLayout>

</FrameLayout>