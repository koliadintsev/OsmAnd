<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp" >

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnDayminus6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/on"
            android:minWidth="40dp"
            android:padding="2dp"
            android:text="-6"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnDayminus5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/on"
            android:minWidth="40dp"
            android:padding="2dp"
            android:text="-5"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnDayminus4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/on"
            android:minWidth="40dp"
            android:padding="2dp"
            android:text="-4"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnDayminus3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/on"
            android:minWidth="40dp"
            android:padding="2dp"
            android:text="-3"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnDayminus2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/on"
            android:minWidth="40dp"
            android:padding="2dp"
            android:text="-2"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnDayminus1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/on"
            android:minWidth="40dp"
            android:padding="2dp"
            android:text="-1"
            android:textColor="#ffffff" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="(Days of week)" />

    <Button
        android:id="@+id/btnslnone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/on"
        android:padding="8dp"
        android:text="Show all served locations"
        android:textColor="#ffffff" />

</LinearLayout>