<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:padding="4dp" >

            <view
                android:id="@+id/sortbyname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                class="com.operasoft.snowboard.view.SortableLabel" />

            <view
                android:id="@+id/sortbystatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                class="com.operasoft.snowboard.view.SortableLabel" />

            <view
                android:id="@+id/sortbydatetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                class="com.operasoft.snowboard.view.SortableLabel" />

            <view
                android:id="@+id/sortbyvehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                class="com.operasoft.snowboard.view.SortableLabel" />

            <view
                android:id="@+id/sortbyservicelocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                class="com.operasoft.snowboard.view.SortableLabel" />
        </LinearLayout>

        <ListView 
            android:id="@+id/lststafflist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>

    <CheckBox android:id="@+id/chkallusers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:background="#aa999999"
        android:checked="false"
        
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:padding="6dp"
        android:textStyle="bold"  
        android:text="View all"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</FrameLayout>