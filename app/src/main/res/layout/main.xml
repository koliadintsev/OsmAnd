<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <net.osmand.plus.views.OsmandMapTileView
        android:id="@+id/MapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <include
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        layout="@layout/mapview_header_top" />

    <ImageView
        android:id="@+id/Iv_MA_Compass_State"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/north" />

    <TextView
        android:id="@+id/drivercomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:background="#000"
        android:padding="5dp"
        android:text="Driver Comment"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/RouteLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/PreviousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_media_previous"
            android:contentDescription="@string/previous_button" />

        <Button
            android:id="@+id/InfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@android:drawable/ic_dialog_info"
            android:contentDescription="@string/info_button" />

        <Button
            android:id="@+id/NextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="55dp"
            android:background="@android:drawable/ic_media_next"
            android:contentDescription="@string/next_button" />
    </LinearLayout>

    <!--
         TextView
        android:id="@+id/routeCrossed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="450dp"
        android:background="#000"
        android:padding="5dp"
        android:text="Route Count"
        android:textColor="#ffffff"
        android:visibility="gone"
    -->

    <TextView
        android:id="@+id/routetimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="65dp"
        android:layout_marginLeft="95dp"
        android:background="#000"
        android:padding="5dp"
        android:text="00:00:00"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/routename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="180dp"
        android:background="#000"
        android:padding="5dp"
        android:text="Route Info"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:visibility="gone" />

    <ToggleButton
        android:id="@+id/btn_breadcrumb"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:background="@drawable/tracer_button"
        android:padding="2dp" />

    <Button
        android:id="@+id/btn_end_route"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="65dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/off"
        android:text="End Route"
        android:textColor="@color/color_white"
        android:visibility="visible" />
    
    <Button
        android:id="@+id/btn_complete_route"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/blue_bg"
        android:text="Look Ahead"
        android:textColor="@color/color_white"
        android:visibility="visible" />

    <include
        android:id="@+id/geofenceComponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="90dp"
        layout="@layout/map_geofence_component"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btn_add_deficiency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="180dp"
        android:layout_marginRight="7dp"
        android:background="@android:color/transparent"
        android:src="@drawable/deficiency_82" />

</FrameLayout>