<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wologin_punch"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.45" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/wo_spn_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/wo_spn_lot_asset"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/wo_spn_damages_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/wo_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/wo_due_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:editable="false"
                android:ems="10"
                android:hint="Due Date" />

            <Spinner
                android:id="@+id/wo_spn_method_work"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/wo_to_do"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/describe_work_to_do"
                android:gravity=""
                android:inputType="textMultiLine" >

            </EditText>

            <EditText
                android:id="@+id/wo_comments"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/wo_edit_comments" 
                android:gravity=""
                android:visibility="gone">

            </EditText>

            <LinearLayout
	            android:id="@+id/wohorizLayout"
	            android:layout_width="match_parent"
	            android:layout_height="75dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="10dp"
	            android:layout_weight="0.45"
	            android:orientation="horizontal" >
	
	            <ImageButton
	                android:id="@+id/wonewPicture"
	                android:layout_width="89dp"
	                android:layout_height="match_parent"
	                android:src="@drawable/ic_action_new_picture" />
	
	            <HorizontalScrollView
	                android:id="@+id/wohorizontalScrollView1"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                 >
	
	                <LinearLayout
	                    android:id="@+id/woimageLayout"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:orientation="horizontal" >
	                </LinearLayout>
	
	            </HorizontalScrollView>
	        </LinearLayout>


            <Button
                android:id="@+id/wo_btn_submit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/custom_red_button"
                android:text="SUBMIT"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>