<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.operasoft.snowboard.view"
    android:id="@+id/panelrow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/panelrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="left|center_vertical"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.operasoft.snowboard.view.worksheet.row.DtoSpinner
            android:id="@+id/spinneremployee"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:prompt="@string/select_user" />

        <EditText
            android:id="@+id/edithours"
            style="@style/worksheetinput"
            android:layout_width="50dp"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:maxLength="3" >
        </EditText>

        <TextView
            android:id="@+id/editdate"
            style="@style/worksheetinputdate"
            android:layout_width="130dp"
            android:layout_marginRight="8dp"
            android:text="select date" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/ic_action_delete" />

</FrameLayout>